---
import Layout from '../layouts/Layout.astro';
import { legalContent } from '../content/legal';
---

<Layout title="Privacy Policy">
  <section class="legal-page section">
    <div class="container">
      <div class="legal-content">
        <h1 class="legal-title">{legalContent.privacy.title}</h1>
        <p class="legal-updated">Last Updated: {legalContent.privacy.lastUpdated}</p>

        <div class="legal-sections">
          {legalContent.privacy.sections.map(section => (
            <div class="legal-section">
              <h2 class="section-title">{section.title}</h2>
              <p class="section-content">{section.content}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .legal-page {
    padding: 4rem 2rem 6rem;
  }

  .legal-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .legal-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .legal-updated {
    color: #808080;
    font-size: 0.95rem;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid rgba(0, 0, 0, 0.1);
  }

  .legal-sections {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .legal-section {
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .legal-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .section-title {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #2d2d2d;
  }

  .section-content {
    color: #4a4a4a;
    line-height: 1.8;
    font-size: 1.05rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 3rem 1.5rem 4rem;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }
</style>
