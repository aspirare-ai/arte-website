---
import { siteConfig } from '../content/site';

const currentYear = new Date().getFullYear();

const footerSections = [
  {
    title: 'Platform',
    links: [
      { href: '/', label: 'Home' },
      { href: '/platform', label: 'Platform' },
      { href: '/industries', label: 'Industries' },
      { href: '/contact', label: 'Contact' }
    ]
  },
  {
    title: 'Legal',
    links: [
      { href: '/privacy-policy', label: 'Privacy Policy' },
      { href: '/terms-of-service', label: 'Terms of Service' },
      { href: '/cookie-policy', label: 'Cookie Policy' }
    ]
  },
  {
    title: 'Contact',
    links: [
      { href: `mailto:${siteConfig.contact.email}`, label: siteConfig.contact.email, external: true },
      { href: `tel:${siteConfig.contact.phone.replace(/\s/g, '')}`, label: siteConfig.contact.phone, external: true }
    ]
  }
];
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main">
      <div class="footer-brand">
        <h3 class="footer-logo">{siteConfig.name}</h3>
        <p class="footer-description">
          Enterprise MLOps platform for AI-driven organizations
        </p>
      </div>

      {footerSections.map(section => (
        <div class="footer-section">
          <h4 class="footer-title">{section.title}</h4>
          <ul class="footer-links">
            {section.links.map(link => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1a1a1a;
    color: #e0e0e0;
    padding: 4rem 2rem 2rem;
    margin-top: 6rem;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    padding-right: 2rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  .footer-description {
    color: #b0b0b0;
    line-height: 1.6;
    margin: 0;
  }

  .footer-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: white;
    margin: 0 0 1.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-links a:hover {
    color: #0066cc;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .footer-bottom p {
    margin: 0;
    color: #808080;
    font-size: 0.9rem;
  }

  @media (max-width: 968px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      grid-column: 1 / -1;
      padding-right: 0;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 3rem 1.5rem 1.5rem;
      margin-top: 4rem;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
